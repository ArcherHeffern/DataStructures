package main;
import java.util.Stack;
import ds.*;

public class Q4 {
	
	public static void main(String[] args) {
		TreeNode tree = new TreeNode(1);
		tree.left = new TreeNode(2);
		tree.left.left = new TreeNode(3);
		tree.left.left.left = new TreeNode(4);
		tree.left.left.right = new TreeNode(5);
		//     1 
		//   2
		//  3  
		//4   5
		
		System.out.println(get_path(tree, 5));
		System.out.println(get_path(tree, 2));
	}
	// 
	public static Stack<Integer> get_path(TreeNode T, int x) {
		if (T == null) {
			return null;		
		}
		else if (T.val == x) {
			Stack<Integer> s = new Stack<>();
			s.push(T.val);
			return s;
		}
		
		else {
			TreeNode[] nodes = new TreeNode[]{T.left, T.right}; 
			for (TreeNode node: nodes)  {
				Stack<Integer> myStack = get_path(node, x);
				if (myStack != null) {
					myStack.push(T.val);				
					return myStack;
				}			
			}
		}
		return null;
	}
}
